{
    "$schema": "./config-schema.json",
    "user": {
        "id": "BLDM_USER_ID"
    },
    "room": {
        "id": "BLDM_ROOM_ID"
    },
    "credential": {
        "buvid3": "${BLDM_BUVID3}",
        "sessdata": "${BLDM_SESSDATA}",
        "bili_jct": "${BLDM_BILI_JCT}"
    },
    "danmaku": {
        "style": {
            "color": "ffffff",
            "position": "scroll"
        }
    },
    "reply": {
        "welcome": "欢迎${uname}光临",
        "gift": "感谢${uname}赠送的${num}个${gift_name}",
        "enable": []
    },
    "app": {
        "log": {
            "config": ""
        },
        "monitor": {
            "interval": 30
        }
    }
}
